{
    "$schema": "https://json.schemastore.org/tsconfig",
    "_version": "22.0.0",

    "compilerOptions": {
        "lib": ["ES2023", "DOM"],
        "module": "esnext",
        "target": "ES2023",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "noEmit": true,
        "jsx": "react-jsx",
        "types": ["jest", "node"]
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
